                                                    <div class="o_row" style="max-width: 200px; max-height: 100px">
                                                        <field name="euro_value"/>
                                                        <field name="currency_id" />
                                                    </div> 
                                    
                                        <!--<group col="2"> 
                                            <field name="euro_value" class="oe_inline"/>
                                            <field name="currency_id" class="oe_inline"/>
                                        </group>
                                    </div> -->
                                    
                                    <!-- <div>
                                    <group>
