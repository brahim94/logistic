                                    </group>
                                    <!-- <field name="no"/>
                                    <field name="na"/>
                                    <field name="dk"/> -->
                                </group>
                            </group>                           
                            </page>
                            <page name="public" string="Total Quantity">
                                   
                                        <group col="2">
                                                <group>
                                                    <field name="teus"/>
                                                    <field name="unit"/>
                                                    <field name="up"/>
                                                    <field name="ft"/>
                                                    <field name="fkg"/>
                                                    <field name="cbm"/>
                                                    <field name="wm"/>
                                                </group>
                                                <group>
                                                    <field name="truck"/>
                                                    <field name="mafi"/>
                                                    <field name="trailer"/>
                                                    <field name="file_id"/>
                                                    <field name="shipment"/>
                                                </group>
                                                
                                        </group>
                                    
                            </page> 
                            <page name="public" string="Cargo indication">
                                    <group col="3">
                                        <group>
                                            <field name="motor_vehicule"/>
                                            <field name="steel_griders"/>
                                            <field name="wood"/>
                                            <field name="machines"/>
                                            <field name="transformers"/>
