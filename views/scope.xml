<odoo>

        <record id='scope_view_form' model='ir.ui.view'>
            <field name="name">scope.type.form</field>
            <field name="model">scope.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Packaging">
                                <group>
                                   <group col="2">
                                        <field name="packagin_division_id"/>
                                        <field name="direction"/>
                                        <field name="packagin_mode_transport_id"/>
                                        <field name="scope"/>
                                        <field name="service"/>
                                        <field name="service_n"/>
                                        <field name="service_detail"/>             
                                    </group>
                                    <group>
                                        <field name="packagin_criteria_id"/>
                                        <field name="packagin_section_id"/>
                                        <field name="atc"/>
                                          <label for="cost_rate_ht_currency"/>
                                            <div class="o_row" style="max-width: 800px; max-height: 500px">
                                                <field name="cost_rate_ht_currency"/>
                                                <field name="cost_rate_ht_monet"/>
                                            </div>
                                        <field name="suppliers"/>
                                        <label for="qty"/>
                                            <div class="o_row" style="max-width: 800px; max-height: 500px">
                                                <field name="qty"/>
                                                <field name="qty_unit"/>
                                            </div>
                                        <label for="sale_rate_ht"/>
                                            <div class="o_row" style="max-width: 800px; max-height: 500px">
                                                <field name="sale_rate_ht"/>
                                                <field name="sale_rate_ht_currency"/>
                                            </div>

                                            
                                       
                                        <label for="discount"/>
                                            <div class="o_row" style="max-width: 200px; max-height: 100px">
                                                <field name="discount"/>
                                                <span>%</span>
                                            </div>

                                        <label for="net_sale_rate"/>
                                            <div class="o_row" style="max-width: 800px; max-height: 500px">
                                                <field name="net_sale_rate" readonly="1"/>
                                                <field name="net_sale_rate_ht_currency"/>
                                            </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

